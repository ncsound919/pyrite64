{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020", "ES2021", "ES2022"],
    "outDir": "./out",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true
  },
  "include": [
    "extension.ts",
    "SequenceAnalyzer.ts",
    "MutationTracker.ts",
    "PhysicsCalculator.ts",
    "BioinformaticsProvider.ts",
    "BioResearchPanel.ts"
  ],
  "exclude": [
    "node_modules",
    "out",
    "**/*.test.ts"
  ]
}
